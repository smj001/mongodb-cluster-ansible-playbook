# network interfaces
net:
  port: 27017
  bindIp: 0.0.0.0

# replication options
replication:
  replSetName: rsdb

# storage options
storage:
  dbPath: /data/db
  journal:
    enabled: true

# systemLog options
systemLog:
  destination: file
  path: /var/log/mongodb/mongod.log
  logAppend: true
  logRotate: rename

# security options
security:
  authorization: disable
setParameter:
   enableLocalhostAuthBypass: false